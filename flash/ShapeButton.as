package  {	import flash.display.Shape;    import flash.display.Sprite;    import flash.events.MouseEvent;    import flash.text.TextField;    import flash.text.TextFormat;	public class ShapeButton extends Sprite {		private var bgd:Sprite;        private var labelField:TextField;		private var x1:Number;		private var y1:Number;		private var width1:Number;		private var height1:Number;		private var txt:String;		public function ShapeButton(label:String,x:Number,y:Number,width:Number,height:Number) {			// constructor code			txt=label;			x1=x;			y1=y;			width1=width;			height1=height;						bgd =  new Sprite();            bgd.graphics.beginFill(0x068566, 1);            bgd.graphics.drawRoundRect(x, y, width,height,15,15);            addChild(bgd);              labelField = new TextField();            labelField.width = width-10;            labelField.height = height-10;            labelField.x = x+5;			labelField.y = y+5;            var format:TextFormat = new TextFormat();            format.align = "center";            format.size = 18;            format.font = "Verdana";            labelField.defaultTextFormat = format;			labelField.text=label;            addChild(labelField);              addEventListener(MouseEvent.ROLL_OVER, onOver);            addEventListener(MouseEvent.ROLL_OUT, onOut);              mouseChildren = false;            buttonMode = true;		}		private function onOver(e:MouseEvent):void {            bgd.alpha = 0.6;			LoadSound.soundBt();        }        private function onOut(e:MouseEvent):void {            bgd.alpha = 1;        }		public function removeMouseEvent():void{			removeEventListener(MouseEvent.ROLL_OVER, onOver);            removeEventListener(MouseEvent.ROLL_OUT, onOut);		}		public function rightButton():void{			bgd.graphics.beginFill(0x00C604);			bgd.graphics.drawRoundRect(x1, y1, width1,height1,15,15);					}		public function wrongButton():void{			bgd.graphics.beginFill(0xA70203);			bgd.graphics.drawRoundRect(x1, y1, width1,height1,15,15);		}		public function getTxt():String{			return txt;		}			}	}