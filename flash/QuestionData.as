package  {	import flash.display.Sprite;	import flash.events.Event	public class QuestionData {			private var newQuestionData:Array;			var question:String;			var option:Array;		public function QuestionData(data:Array) {			// constructor code			var _questionData:Array=data;			newQuestionData=_questionData					}				public function getQuestion(level:Number):String{			 var question:String= newQuestionData[level].question;			return question;		}		public function getOption(level:Number):Array{			 var option:Array= arrayShuffle(newQuestionData[level].option);			 						return option;		}		public function getRightAnswer(level:Number):String{			 var rightAnswer:String= newQuestionData[level].rightAnswer;			return rightAnswer;		}		function arrayShuffle(array_arr:Array):Array{   				for(var i:Number = 0; i < array_arr.length; i++){      			var randomNum_num = Math.floor(Math.random() * array_arr.length)      			var arrayIndex = array_arr[i];      			array_arr[i] = array_arr[randomNum_num];      			array_arr[randomNum_num] = arrayIndex;  				}   			return array_arr;		}			}	}