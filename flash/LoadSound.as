package  {	import flash.display.Sprite;	import flash.media.Sound;	import flash.net.URLRequest;	import flash.media.SoundLoaderContext;	import flash.media.SoundChannel;		public class LoadSound extends Sprite {	 		public static var soundMain:Sound;		public static var channel:SoundChannel;		public static var channel1:SoundChannel;		public static var _playing:Boolean=false;		public static var position:int;		public  static var BtnSound:Sound;			public function LoadSound()  {			// constructor code			var buffer:SoundLoaderContext=new SoundLoaderContext(5000);			soundMain= new Sound();						soundMain.load(new URLRequest("Faster.mp3"),buffer);			channel=soundMain.play();				BtnSound=new Sound();			BtnSound.load(new URLRequest("button-27.mp3"));						_playing=true;					}		public static function onPlayPause():void{			if(_playing){								channel.stop();															}else{				channel=soundMain.play(position);							}			_playing=!_playing;		}		public static function soundBt():void{						if(!_playing){								channel1.stop();							}else{				channel1=BtnSound.play();							}					}			}	}